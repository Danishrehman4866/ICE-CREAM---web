*{
    padding: 0;
    margin: 0;
    text-decoration: none;
    list-style: none;
    box-sizing: border-box;
}
body{
    font-family: montserrat;
}
nav{
    background: #d6d9db;
    height: 80px;
    width: 100%;
}
.logo{
    color: rgb(231, 24, 145);
    font-size: 45px;
    font-weight: bold;
    font-family: sans-serif;
    line-height: 80px;
    padding: 0 100px;
}
span.hero{
    color: rgb(148, 187, 9);
    font-size: 45px;
    font-weight: bold;
    font-family: sans-serif;
}
nav ul{
    float: right;
    margin-right: 20px;
    padding-right: 10px;
    padding-bottom: 37px;
}
nav ul li{
    display: inline-block;
    line-height: 80px;
    margin: 0 5px;
    padding: 0px 35px;
}
nav ul li a{
    color: rgb(104, 102, 102);
    font-size: 17px;
    text-transform: uppercase;
    padding: 7px 13px;
    border-radius: 3px;
}
